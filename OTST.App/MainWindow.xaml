<Window x:Class="OTST.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Omgevingswet Test Suite Tool (.NET)"
        Height="600"
        Width="900"
        MinHeight="400"
        MinWidth="700">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Text="Bron ZIP-bestand:" VerticalAlignment="Center" FontWeight="SemiBold" />
        <TextBox Grid.Column="0"
                 Grid.Row="1"
                 Margin="0,6,6,6"
                 VerticalAlignment="Center"
                 Height="32"
                 Name="SourcePathTextBox" />
        <Button Grid.Column="1"
                Grid.Row="1"
                Content="Bladeren..."
                Width="110"
                Margin="0,6,0,6"
                Click="BrowseButton_Click" />

        <Grid Grid.Row="2" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    Width="120"
                    Margin="0,0,0,12"
                    Name="AnalyzeButton"
                    Content="Analyseer"
                    Click="AnalyzeButton_Click" />

            <TextBlock Grid.Row="1"
                       Text="Analyse resultaat:"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6" />

            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        Margin="0,0,0,12">
                <Button x:Name="PublicatieButton"
                        Content="Publicatie"
                        Margin="0,0,6,0"
                        Click="HandlePublicatie_Click" />
                <Button x:Name="ValidatieButton"
                        Content="Validatie"
                        Margin="0,0,6,0"
                        Click="HandleValidatie_Click" />
                <Button x:Name="IntrekkingPublicatieButton"
                        Content="Intrekking publicatie"
                        Margin="0,0,6,0"
                        Click="HandleIntrekkingPublicatie_Click" />
                <Button x:Name="IntrekkingValidatieButton"
                        Content="Intrekking validatie"
                        Margin="0,0,6,0"
                        Click="HandleIntrekkingValidatie_Click" />
                <Button x:Name="DoorleverenButton"
                        Content="Doorleveren"
                        Margin="0,0,6,0"
                        Click="HandleDoorleveren_Click" />
                <Button x:Name="ValidatieDoorleverenButton"
                        Content="Validatie doorleveren"
                        Click="HandleValidatieDoorleveren_Click" />
            </StackPanel>

            <TextBox Grid.Row="3"
                     Name="ResultTextBox"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas"
                     FontSize="13"
                     IsReadOnly="True" />
        </Grid>

        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="2"
                   Name="StatusTextBlock"
                   Foreground="Gray"
                   Margin="0,12,0,0" />
    </Grid>
</Window>
